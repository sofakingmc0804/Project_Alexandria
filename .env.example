# Alexandria Environment Configuration
# Copy to .env and customize for your environment

# ===== Database & Services =====
# Vector database for RAG
QDRANT_URL=http://localhost:6333

# GROBID for PDF processing
GROBID_URL=http://localhost:8070

# Redis for task queue
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== Model Configuration =====
# Whisper ASR model (tiny, base, small, medium, large, large-v2, large-v3)
WHISPER_MODEL=large-v3

# Embedding model for RAG
EMBED_MODEL=BAAI/bge-large-en-v1.5

# TTS engine (f5-tts, piper)
TTS_ENGINE=f5-tts

# Generator model for rewriting (optional GPU burst)
GENERATOR_MODEL=Qwen/Qwen2.5-7B-Instruct

# ===== Paths =====
# Local processing directories
INPUTS_PATH=./inputs
SOURCES_PATH=./sources
DIST_PATH=./dist
TMP_PATH=./tmp
KNOWLEDGE_PATH=./knowledge

# ===== Processing Options =====
# Run locally or burst to GPU
PROCESSING_MODE=local  # Options: local, gpu_burst

# GPU burst provider (if PROCESSING_MODE=gpu_burst)
GPU_PROVIDER=runpod  # Options: runpod, vast, modal
GPU_API_KEY=

# ===== Quality Thresholds (from PRD 3) =====
MIN_GROUNDEDNESS=0.8
MIN_CONTEXT_PRECISION=0.7
MAX_WER=8.0
TARGET_LUFS=-16.0
LUFS_TOLERANCE=1.0
TRUE_PEAK_MAX=-1.0

# ===== Audio Processing =====
# Use WSL for ffmpeg/sox (Windows only)
USE_WSL_AUDIO=true

# Sample rate for processing
AUDIO_SAMPLE_RATE=16000

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text

# ===== Development =====
# Enable debug mode
DEBUG=false

# Run tests in CI
CI=false
