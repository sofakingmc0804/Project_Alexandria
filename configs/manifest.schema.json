{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Export Manifest",
  "description": "Manifest describing all deliverables for an episode",
  "type": "object",
  "required": ["job_id", "timestamp", "files", "metadata", "qc_metrics", "config"],
  "properties": {
    "job_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "size_bytes"],
        "properties": {
          "path": { "type": "string" },
          "type": { "type": "string", "enum": ["stem", "mix", "promo", "study_guide", "transcript", "metadata"] },
          "size_bytes": { "type": "integer" },
          "duration_seconds": { "type": "number" },
          "checksum_sha256": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "language": { "type": "string" },
        "persona": { "type": "string" },
        "mix_profile": { "type": "string" },
        "total_duration_seconds": { "type": "number" }
      }
    },
    "qc_metrics": {
      "type": "object",
      "required": ["passed"],
      "properties": {
        "passed": { "type": "boolean" },
        "groundedness": { "type": "number", "minimum": 0, "maximum": 1 },
        "context_precision": { "type": "number", "minimum": 0, "maximum": 1 },
        "wer": { "type": "number", "minimum": 0 },
        "lufs": { "type": "number" },
        "true_peak_db": { "type": "number" },
        "issues": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Output menu config used for this run",
      "properties": {
        "deliverables": { "type": "array", "items": { "type": "string" } },
        "length_mode": { "type": "string" },
        "persona": { "type": "string" },
        "mix_profile": { "type": "string" }
      }
    }
  }
}
