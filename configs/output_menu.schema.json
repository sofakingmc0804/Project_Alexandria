{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Output Menu Configuration",
  "type": "object",
  "required": ["deliverables", "length_mode", "persona", "mix_profile"],
  "properties": {
    "deliverables": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["stems", "upload_mix", "music_light", "music_heavy", "promo_pack", "social_loop", "study_pack", "transcript_only"]
      },
      "minItems": 1,
      "default": ["stems", "upload_mix"]
    },
    "length_mode": {
      "type": "string",
      "enum": ["full", "condensed", "topic_focus"],
      "default": "full"
    },
    "persona": {
      "type": "string",
      "default": "conversational_educator"
    },
    "mix_profile": {
      "type": "string",
      "default": "clean"
    },
    "target_duration_minutes": {
      "type": "number",
      "minimum": 5,
      "maximum": 90,
      "default": 60
    },
    "promo_count": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "default": 3
    },
    "localization": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "target_languages": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
